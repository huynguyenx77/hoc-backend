extends ../../layouts/default.pug 
include ../../mixins/alert.pug
block main
  if(role.permissions.includes("accounts_create"))
    +alert-error (3000)
    h1(class="mb-4") Thêm mới tài khoảng
    if(roles.length > 0)
      form(
        action=`${prefixAdmin}/accounts/create`
        method="POST"
        enctype="multipart/form-data"
      ) 
        div(class="form-group")
          label(for="fullName") Họ tên *
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
          )
        div(class="form-group")
          label(for="email") Email *
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          )  
        div(class="form-group")
          label(for="password") Mật khẩu *
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          )  
        div(class="form-group")
          label(for="phone") Số điện thoại
          input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
          )
        div(
          class="form-group"
          upload-image
        )
          label(for="thumbnail") Ảnh
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )

          .image-wrapper 
            button(
              class="btn btn-danger btn-sm button-delete"
              type="button"
              button-delete
            ) X
            img(
              src=""
              upload-image-preview
              class="image-preview"
            )
        div(class="form-group")
          label(for="role_id") Phân quyền
          select(name="role_id" id="role_id" class="form-control")
            option(disable) -- Chọn --
            each item in roles
              option(value=item.id) #{item.title}
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive" 
            name="status"
            value="active"
            checked
          )
          label(for="statusActive" class="form-check-label") Hoạt động  
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInactive"
            name="status"
            value="inactive"
          )
          label(for="statusInactive" class="form-check-label") Dừng hoạt động     


        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Tạo mới
    else  
      .card.mb-3 
      .card-header Vui lòng thêm nhóm quyền trước khi tạo tài khoảng
        .card-body 
          .row 
            .col-8
            .col-4 
              a(
                href=`${prefixAdmin}/roles/create`
                class="btn btn-outline-success"
              ) + Thêm nhóm quyền
