extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    include ../../partials/list-btn-user.pug

    .row 
      .col-12 
        .box-head 
          +box-head(pageTitle)

    .row 
      .col-12 
        .chat-box(my-id=user.id)
          .inner-body
            each chat in chats 
              div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.infoUser.id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                if(chat.content)
                  .inner-content 
                    | #{chat.content}
                if(chat.images)
                  .inner-images 
                    each image in chat.images
                      img(src=image, alt="ERROR")
            div(class="inner-list-typing")
          
          .inner-preview-images 
            div(class="custom-file-container" data-upload-id="upload-image")

          .inner-foot 
            form(
              class="inner-form"
              action=""
            ) 
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              ) 
              label(for="file-upload-with-preview-upload-image" class="btn btn-light mx-2 mb-0") <i class="fa-regular fa-images"></i>
              span(class="button-icon btn btn-light mx-2") <i class="fa-solid fa-face-smile"></i>
              button 
                .fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")
  