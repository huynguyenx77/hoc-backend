extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row 
      .col-12 
        .box-head 
          +box-head(pageTitle)

    .row 
      .col-12 
        .chat-box
          .inner-body
            each chat in chats 
              div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.infoUser.id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                .inner-content 
                  | #{chat.content}
            //- .inner-outgoing 
            //-   .inner-content 
            //-     | Thế à? OK em iu
          
          .inner-foot 
            form(
              class="inner-form"
              action=""
            ) 
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              button 
                .fa-solid.fa-paper-plane
            
      