extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
  .container.my-3
    include ../../partials/list-btn-user.pug
    .row 
      .col-12 
        +box-head("Danh sách người dùng")
  
    .row
      each user in users
        .col-6
          div(class="box-user")
            div(class="inner-avatar")
              img(src=(user.avatar ? user.avatar : "/images/avatar.webp")
                  alt=user.fullName
                )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-button")
                button(
                  class="btn btn-sm btn-primary mr-1"
                  btn-add-friend=user.id
                ) Kết bạn
                button(
                  class="btn btn-sm btn-secondary mr-1"
                  btn-cancel-friend=user.id
                ) Hủy

  block script
    script(type="module", src="/js/user.js")    